# -*- coding: utf-8 -*-
# vim: ft=yaml
# yamllint disable rule:comments-indentation
---
invidious:
  install:
      # Install rootless containers running as dedicated user.
    rootless: true
      # When applying `clean` states, also remove application data.
      # Setting this to true might incur accidental data loss!
    remove_all_data_for_sure: false
    # Invidious configuration. See below comment for reference.
  config:
      # Automatically check and fix table integrity
    check_tables: true
      # Database configuration is automatically applied
    db:
      dbname: invidious
      host: invidious-db
        # If this is undefined, a random password specific
        # to this minion will be autogenerated.
      password: null
      port: 5432
      user: invidious
      # If this is undefined, a random hmac key specific
      # to this minion will be autogenerated.
    hmac_key: null
      # This will affect both internal and external port by default.
    port: 3000

